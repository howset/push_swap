{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/headers",
                "${workspaceFolder}/srcs/bonus/*.c",
                "${workspaceFolder}/srcs/commands/*.c",
                "${workspaceFolder}/srcs/parse/*.c",
                "${workspaceFolder}/srcs/utils/*.c",
                "-o",
                "${workspaceFolder}/checker",
                "-L${workspaceFolder}/libft",
                "-lft"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}